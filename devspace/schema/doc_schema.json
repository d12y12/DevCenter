{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "doc_schema.json",
  "type": "object",
  "required": [
    "type",
    "port",
    "localization",
    "services"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["Doc-alpine"]
    },
    "port": {
      "type": "integer",
      "minimum": 8000,
      "maximum": 9000
    },
    "localization": {
      "type": "boolean"
    },
    "services": {
      "$id": "#/properties/services",
      "type": "object",
      "patternProperties": {
        "^([a-zA-Z\\d](?:[a-zA-Z\\d]|-(?=[a-zA-Z\\d])){0,20})$": {
          "$ref": "#/definitions/service"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "service": {
      "$id": "#/definitions/service",
      "type": "object",
      "required": [
        "builder",
        "source"
      ],
      "properties": {
        "builder": {
          "type": "string",
          "enum": ["docbook", "sphnix",""]
        },
        "source": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}